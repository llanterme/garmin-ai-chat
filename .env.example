# Environment Configuration
APP_NAME="Garmin AI Chat API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=mysql+aiomysql://root:root@localhost:3306/garmin_ai_chat
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Authentication Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Garmin Connect Configuration
GARMIN_ENCRYPTION_KEY=your-garmin-encryption-key-32

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=/var/log/garmin-ai-chat/app.log

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60